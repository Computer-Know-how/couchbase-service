{
	"parserOptions": {
		"ecmaVersion": 8
	},
	"rules": {
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true
			}
		],
		"linebreak-style": [
			2,
			"unix"
		],
		"semi": [
			2,
			"always"
		]
	},
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended"
}